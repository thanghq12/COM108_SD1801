#include <stdio.h>

int main()
{
    int luachon;
    do { 
        printf("0. Thoat \n");
        printf("1. Lua chon 1 \n");
        printf("2. Lua chon 2 \n");
        printf("3. Lua chon 3 \n");
        printf("Moi ban nhap vao lua chon ");
        scanf("%d",&luachon);
        switch(luachon) {
            case 1: 
            printf("xu ly lua chon 1 \n");
            break;
            case 2:
            printf("xu ly lua chon 2 \n");
            break;
            case 3: 
            printf("xu ly lua chon 3 \n");
            break;
        }
    } while(luachon >=1 && luachon<=3);
   
    return 0;
}