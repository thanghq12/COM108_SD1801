#include <stdio.h>

int main()
{
    
    // nhập vào 1 mảng
    // in ra màn hình các phần tử trong mảng là số chẵn
    int i,number;
    printf("Nhap vao so phan tu cua mang:");
    scanf("%d",&number);
    int arr[number];
    for(i = 0; i < number ;i ++) {
        printf("Moi ban nhap vao phan tu o vi tri thu %d :",i);
        scanf("%d",&arr[i]);
    }
    int tong = 0;
    int dem = 0;
    printf("cac phan tu trong mang la so chan la : ")
    for(i = 0 ; i < number ; i ++ ) {
        if(arr[i] % 2 == 0) {
            printf("%d \n",arr[i]);
            tong += arr[i];
            dem ++;
        }
        
    } 
    //lay tong/dem 
    printf("Tong cac phan tu trong mang la : %d ",tong);
    //tinh trung binh cong cac phan tu trong mang la so chan  
    
    // tinh tong cac phan tu trong mang 
    return 0;
}
