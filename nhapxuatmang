#include <stdio.h>

int main()
{
    // nhập xuất mảng
    // nhập mảng 
    int i, number; 
    printf("Moi nhap vao tong so phan tu cua mang ");
    scanf("%d",&number);
    //khai báo mảng 
    int arr[number]; // number ở bên trong là giá trị do người dùng nhập
    printf("Moi ban nhap vao cac phan tu cua mang ");
    for(i = 0 ; i < number; i++) {
        printf("Moi nhap vao phan tu o vi tri thu %d :",i);
        scanf("%d",&arr[i]);
    }
    // xuất mảng
    for(i = 0;i < number;i ++) {
        printf("Phan tu o vi tri thu %d la %d \n",i,arr[i]);
    }
    return 0;
}
